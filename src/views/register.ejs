<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create account • Perfume</title>
    <link rel="stylesheet" href="/css/theme.css" />
  </head>
  <body>
    <header class="header container">
      <div class="brand">
        <div class="logo"></div>
        <div>Perfume</div>
      </div>
      <a href="/" class="btn btn-ghost">Home</a>
    </header>

    <main class="auth-wrapper">
      <section class="auth-card">
        <h1>Create your account</h1>
        <p class="auth-subtitle">
          Join the community to review and discover perfumes.
        </p>

        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert" role="alert"><%= error %></div>
        <% } %>

        <form class="form-grid" method="POST" action="/auth/register">
          <div class="row">
            <div class="field">
              <label class="label" for="name">Full name</label>
              <input
                class="input"
                type="text"
                id="name"
                name="name"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="field">
              <label class="label" for="YOB">Year of birth</label>
              <input
                class="input"
                type="number"
                id="YOB"
                name="YOB"
                min="1900"
                max="<%= new Date().getFullYear() %>"
                placeholder="1998"
                required
              />
            </div>
          </div>

          <div class="row">
            <div class="field">
              <label class="label" for="gender">Gender</label>
              <select class="select" id="gender" name="gender" required>
                <option value="">Select…</option>
                <option value="true">Male</option>
                <option value="false">Female</option>
              </select>
            </div>
            <div class="field">
              <label class="label" for="email">Email</label>
              <input
                class="input"
                type="email"
                id="email"
                name="email"
                placeholder="you@example.com"
                required
              />
            </div>
          </div>

          <div class="field">
            <label class="label" for="password">Password</label>
            <input
              class="input"
              type="password"
              id="password"
              name="password"
              placeholder="Create a secure password"
              minlength="6"
              required
            />
          </div>

          <button class="btn btn-primary" type="submit">Create account</button>
        </form>

        <p class="helper">
          Already have an account? <a href="/auth/login">Sign in</a>
        </p>
      </section>
    </main>

    <footer class="footer">
      © <%= new Date().getFullYear() %> Perfume. All rights reserved.
    </footer>
  </body>
</html>
