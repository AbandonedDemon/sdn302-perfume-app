<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sign in • Perfume</title>
    <link rel="stylesheet" href="/css/theme.css" />
  </head>
  <body>
    <header class="header container">
      <div class="brand">
        <button class="btn btn-ghost" onclick="location.href='/'">
          <div class="logo"></div>
          <div>Perfume</div>
        </button>
      </div>
      <a href="/" class="btn btn-ghost">Home</a>
    </header>

    <main class="auth-wrapper">
      <section class="auth-card">
        <h1>Welcome back</h1>
        <p class="auth-subtitle">Sign in to manage your profile and reviews.</p>

        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert" role="alert"><%= error %></div>
        <% } %>

        <form class="form-grid" method="POST" action="/auth/login">
          <div class="field">
            <label class="label" for="email">Email</label>
            <input
              class="input"
              type="email"
              id="email"
              name="email"
              placeholder="you@example.com"
              required
            />
          </div>

          <div class="field">
            <label class="label" for="password">Password</label>
            <input
              class="input"
              type="password"
              id="password"
              name="password"
              placeholder="••••••••"
              required
            />
          </div>

          <button class="btn btn-primary" type="submit">Sign in</button>
        </form>

        <div class="divider" style="margin: 1rem 0; text-align: center">or</div>
        <a
          class="btn btn-ghost"
          href="/auth/google"
          style="display: inline-flex; align-items: center; gap: 8px"
        >
          <img
            src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
            alt="Google"
            width="18"
            height="18"
          />
          Continue with Google
        </a>

        <p class="helper">
          Don't have an account? <a href="/auth/register">Create one</a>
        </p>
      </section>
    </main>

    <footer class="footer">
      © <%= new Date().getFullYear() %> Perfume. All rights reserved.
    </footer>
  </body>
</html>
